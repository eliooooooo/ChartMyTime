<div class="dayModal absolute w-full h-full z-[80] bg-[rgba(0, 0, 0, 0.5)]" x-show="dayModalOpen"
    x-transition:enter="transition ease-out duration-300" 
    x-transition:enter-start="opacity-0" 
    x-transition:enter-end="opacity-100" 
    x-transition:leave="transition ease-in duration-300" 
    x-transition:leave-start="opacity-100" 
    x-transition:leave-end="opacity-0"
    style="background: rgba(0, 0, 0, 0.5); display: none;">
    <div class="p-3 xl:p-5 md:rounded-xl w-full h-auto md:w-2/3 lg:w-1/2 absolute bg-white top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-30" @click.away="dayModalOpen = false">
        <div class="dayModalClose absolute top-3 xl:top-5 right-3 xl:right-5 z-20 hover:cursor-pointer" @click="dayModalOpen = !dayModalOpen">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
            </svg>
        </div>
        <h2 class="relative top-0 modalDate text-2xl text-center"></h2>
        <div class="modalContentTime relative flex flex-col xl:flex-row top-0 overflow-y-auto mt-4">
            <div class="modalCardTime relative w-full xl:w-[30%] h-24 xl:h-36 rounded-xl">
                <div class="colorDetailTime bg-white border-[1px] border-gray-400 w-full h-full rounded-xl"></div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" tabindex="-1" width="16" height="16" fill="black" class="bi bi-info-circle-fill absolute top-0 ml-3 mt-3 hover:cursor-pointer" viewBox="0 0 16 16" data-tippy-placement="bottom" data-tippy-content="Color intensity is calculated on the basis of the highest daily activity of the year (maxTime / time)">
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2"/>
                    </svg>
                </div>
            </div>
            <div class="w-full xl:ml-4" id="modal" x-data="{ detailsTimeOpen: true }">
                <div class="titleDetails flex flex-row gap-5 mt-1 mb-1 hover:cursor-pointer" @click="detailsTimeOpen = !detailsTimeOpen"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down relative top-[6px]" viewBox="0 0 16 16" x-show="!detailsTimeOpen">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-up relative top-[6px]" viewBox="0 0 16 16" x-show="detailsTimeOpen">
                        <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708z"/>
                    </svg>
                    Entered time
                </div>
                <div class="timeDetails pt-2 border-t-[1px] border-t-gray-400" x-show="detailsTimeOpen" x-transition>
                    <div class="detailOnOpen">
                        <div class="flex flex-row justify-between">
                            <div class="flex flex-row gap-2 items-end"><p class="DetailsTimeTime font-bold text-xl" ></p><span class="text-gray-400 font-normal text-base ml-2 detailsTimeDay">Le 20/01/24 Ã  23h55<span></div>
                            <a href="#" class="deleteDetailTime p-2 bg-black rounded-md">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill text-white" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                </svg>
                            </a>
                        </div>
                        <p class="line-clamp-3 detailComment"></p>
                    </div>
                    <p class="detailError">You haven't entered any information.</p>
                </div>
            </div>
        </div>
        <div class="relative flex flex-col mt-3">
            <form method="POST" id="formAddTime" action="/chart-my-time/day?action=create" class="mt-4">
                <div class="flex flex-row items-center justify-between gap-5">
                    <input type="hidden" id="inputDate" name="date">
                    <input type="hidden" id="inputWorkspace" name="workspace">
                    <div class="flex flex-row gap-1">
                        <input type="text" class="pl-2 p-2 border-[1px] rounded border-gray-600 bg-gray-100" id="modalTime" name="time" placeholder="Time">
                        <svg xmlns="http://www.w3.org/2000/svg" tabindex="-1" width="16" height="16" fill="white" class="bi bi-info-circle-fill mt-1 ml-3 hover:cursor-pointer" style="mix-blend-mode: exclusion;" viewBox="0 0 16 16" data-tippy-placement="top" data-tippy-content="Use the format 'h:m', e.g. '1h30' or '1h'.">
